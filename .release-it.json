{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": ["package.json", "package-lock.json", "packages/**/package*.json"]
    }
  },
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "Prepare release ${version}",
    "tagAnnotation": "Release ${version}. See https://github.com/nartc/mapper/blob/main/CHANGELOG.md"
  },
  "github": {
    "releaseNotes": true
  }
}
