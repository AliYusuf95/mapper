{
  "root": "packages/mikro",
  "sourceRoot": "packages/mikro/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/mikro",
        "main": "packages/mikro/src/index.ts",
        "tsConfig": "packages/mikro/tsconfig.lib.json",
        "assets": ["packages/mikro/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/mikro/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/mikro"],
      "options": {
        "jestConfig": "packages/mikro/jest.config.js",
        "passWithNoTests": true
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/mikro"
      }
    }
  },
  "tags": [
    "scope:mikro",
    "type:plugin"
  ]
}
